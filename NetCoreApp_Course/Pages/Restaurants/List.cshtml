			<td>@restaurant.Location</td>
			<td>@restaurant.CusineType</td>
			@*<td>
				<a class="btn-primary btn-lg" href="/Restaurants/Details?restaurantId=@restaurant.Id"><i>Dettagli</i></a>
				
			</td>*@
			<td>
				<a class="btn-primary btn-lg" asp-page = "./Detail" asp-route-restaurantId="@restaurant.Id"><i>Dettagli</i></a>
				
			</td>
			<td>
				<a class="btn-primary btn-lg" asp-page = "./Edit" asp-route-restaurantId="@restaurant.Id"><i>Edit</i></a>
				
			</td>
		</tr>
	}

</table>
<a asp-page=".\Edit" class= "btn btn-primary">Add New</a>

